            <!-- Data Templates -->
            <DataTemplate DataType="{x:Type viewModels:MessageViewModel}">
                <Grid MaxWidth="250"
                      MaxHeight="250"
                      Width="Auto"
                      Height="Auto"
                      Background="{DynamicResource PrimaryHueLightBrush}">

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon VerticalAlignment="Center" 
                                                 HorizontalAlignment="Center"
                                                 Margin="10 10 5 10">
                            <materialDesign:PackIcon.Style>
                                <Style BasedOn="{StaticResource {x:Type materialDesign:PackIcon}}"
                                       TargetType="materialDesign:PackIcon">
                                    <Setter Property="Kind" Value="Information"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsError}" Value="True">
                                            <Setter Property="Kind" Value="Exclamation"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialDesign:PackIcon.Style>
                        </materialDesign:PackIcon>

                        <TextBlock Text="{Binding}" 
                                   Grid.Column="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0 10 10 10"
                                   Foreground="{DynamicResource PrimaryHueDarkBrush}"
                                   TextDecorations="Underline"
                                   TextWrapping="Wrap" />
                        </Grid>

                    <Grid Grid.Row="1">

                        <Button Foreground="{DynamicResource PrimaryHueDarkBrush}"
                                VerticalAlignment="Stretch"
                                Content="ОК" 
                                Height="50"
                                Width="100"
                                Command="{Binding PressCommand}"
                                CommandParameter="true"
                                Margin="5" >

                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsError}" Value="true">
                                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Foreground="{DynamicResource PrimaryHueDarkBrush}"
                                HorizontalAlignment="Right" VerticalAlignment="Stretch"
                                Content="Отмена"
                                Height="50"
                                Width="100"
                                Command="{Binding PressCommand}"
                                CommandParameter="false"
                                Margin="5" >
                            
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsError}" Value="true">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type viewModels:DownloadingViewModel}">
                <Grid Width="200" Height="150">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Ожидайте загрузки" HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               Margin="10" />

                    <ProgressBar Grid.Row="1" Margin="10" Value="{Binding Progress}" Minimum="0" Maximum="100" />

                    <TextBlock Grid.Row="2" HorizontalAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               Margin="10">
                        <Run Text="{Binding Speed}" />
                        <Run Text="Кб/сек" />
                    </TextBlock>

                    <Button Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignToolButton}"
                            Foreground="{DynamicResource MaterialDesignBodyLight}"
                            Content="Отмена"
                            Command="{Binding Cancel}" />
                </Grid>
            </DataTemplate>

